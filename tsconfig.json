{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "./",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "__tests__",
    "dist",
    "node_modules",
    "ast-transformer.ts"
  ]
}