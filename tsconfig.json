{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "./",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "plugins": [
      {
        "transform": "./ast-transformer.ts",
        "type": "raw",
        "after": false
      }
    ]
  },
  "exclude": ["__tests__", "dist", "node_modules", "ast-transformer.ts"]
}
